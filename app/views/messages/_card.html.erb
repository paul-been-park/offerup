<div class="card mb-3">
  <h2 class="card-header h4">
    Message #<%= message.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Listing</dt>
      <!-- Display listing_id start -->
      <dd>
        <% if @message.listing.present? %>
          <%= link_to message.listing, message.listing %>
        <% end %>
      </dd>
      <!-- Display listing_id end -->

      <dt>Prospective buyer</dt>
      <!-- Display prospective_buyer_id start -->
      <dd>
        <% if @message.prospective_buyer.present? %>
          <%= link_to message.prospective_buyer, message.prospective_buyer %>
        <% end %>
      </dd>
      <!-- Display prospective_buyer_id end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back message, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link message start -->
      <div class="col">
        <%= link_to edit_message_url(message), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link message end -->

      <!-- Delete link message start -->
      <div class="col">
        <%= link_to message, method: :delete, data: { confirm: "Do you really want to delete this message?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link message end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(message.updated_at) %> ago
  </div>
</div>
