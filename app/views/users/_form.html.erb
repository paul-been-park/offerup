<% was_validated = user.errors.any? %>

<%= form_with(model: user, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% name_class = "form-control" %>
    <% name_was_invalid = user.errors.include?(:name) %>

    <% if was_validated %>
      <% if name_was_invalid %>
        <% name_class << " is-invalid" %>
      <% else %>
        <% name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :name %>
    <%= f.text_field :name, class: name_class, placeholder: "Enter name" %>
    <% if name_was_invalid %>
      <% user.errors.full_messages_for(:name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% prospective_buyer_class = "form-control" %>
    <% prospective_buyer_was_invalid = user.errors.include?(:prospective_buyer) %>

    <% if was_validated %>
      <% if prospective_buyer_was_invalid %>
        <% prospective_buyer_class << " is-invalid" %>
      <% else %>
        <% prospective_buyer_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :prospective_buyer_id %>
    <%= f.text_field :prospective_buyer_id, class: prospective_buyer_class, placeholder: "Enter prospective buyer" %>
    <% if prospective_buyer_was_invalid %>
      <% user.errors.full_messages_for(:prospective_buyer).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
